.custom-select
    position relative
    &__inner
        display inline-block
        position relative
    &__input
        padding 0 15px
        border none
        border-radius 4px
        border 1px solid #dcdfe6
        outline none
        -webkit-appearance none
        height 40px
        line-height 40px
        box-sizing border-box
        display inline-block
        margin-left 20px
        color #606266
        min-width 200px
        margin-top 20px
        transition all 2s ease-in-out
        &:focus
            box-shadow 0 0 5px rgb(19, 12, 11)
    &__suffix
        position absolute
        top 50%
        right 8px
        color #c0c4cc
    &__dropdown
        list-style none
        padding 6px 0
        margin 0
        box-sizing border-box
        position absolute
        left 20px
        top 65px
        background-color #fff
        overflow scroll
        width 200px
        height 200px
        // box-shadow 1px 1px 1px 0 rgb(0 0 0 / 10%)
        border 1px solid #dcdfe6
        z-index 10
        &:before
            position absolute
            width 15px
            height 15px
            top -10px
            left 20px
            border-left 15px solid transparent
            border-right 15px solid transparent
            border-bottom 15px solid green
        .dropdown-item
            font-size 14px
            padding 0 20px
            position relative
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
            color #606266
            height 34px
            line-height 34px
            box-sizing border-box
            cursor pointer
            &.hover
                background-color #f5f7fa
