.setting-box
  display flex
  align-items center
  .prize-list
    list-style none
    &__item
      margin-top 20px
    &__title
      text-align right
      display inline-block
      min-width 400px
      color #606266
    &__value
      padding 0 15px
      border none
      border-radius 4px
      border 1px solid #dcdfe6
      outline none
      -webkit-appearance none
      height 40px
      line-height 40px
      box-sizing border-box
      display inline-block
      margin-left 20px
      color #606266
      min-width 200px
      &:focus
        box-shadow 0 0 5px rgba(216, 76, 41, 1)
    &__select
      padding 0 15px
      border none
      border-radius 4px
      border 1px solid #dcdfe6
      outline none
      -webkit-appearance none
      height 40px
      line-height 40px
      box-sizing border-box
      display inline-block
      margin-left 20px
      color #606266
      min-width 200px
      margin-top 20px
      &:focus
        box-shadow 0 0 5px rgba(216, 76, 41, 1)
  .btn
    box-sizing border-box
    display inline-block
    line-height 1
    white-space nowrap
    cursor pointer
    background #fff
    border 1px solid #dcdfe6
    color #606266
    -webkit-appearance none
    text-align center
    box-sizing border-box
    outline none
    margin 0
    transition .1s
    font-weight 500
    -moz-user-select none
    -webkit-user-select none
    -ms-user-select none
    padding 12px 20px
    font-size 14px
    border-radius 4px
    margin-left 20px
    &.btn-primary
      background-color #4094ff
      border-color #4094ff
      color #FFF

